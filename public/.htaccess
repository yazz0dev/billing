# .htaccess for public directory
# This file enables clean URLs and routes requests to public/index.php
# Requires mod_rewrite enabled in httpd.conf and AllowOverride All or FileInfo set for this directory.

<IfModule mod_rewrite.c>
    # Turn on the Rewrite Engine
    RewriteEngine On

    # Set the base directory for rewrites.
    # With DocumentRoot pointing to /public, RewriteBase should be /
    RewriteBase /

    # Send all requests not for existing files or directories to index.php
    # Check if the requested path is NOT a real file
    RewriteCond %{REQUEST_FILENAME} !-f
    # Check if the requested path is NOT a real directory
    RewriteCond %{REQUEST_FILENAME} !-d

    # If it's neither a file nor a directory within the public directory, rewrite the request to index.php
    RewriteRule ^(.*)$ index.php [L]

</IfModule>

# Optional: Deny access to specific files/directories in public if needed
# e.g., <Files .env> Order allow,deny Deny from all </Files>