# ./public/.htaccess
<IfModule mod_rewrite.c>
    RewriteEngine On

    # If your app is directly under the domain (e.g. localhost/, yourdomain.com/)
    # And DocumentRoot is /path/to/project/public
    RewriteBase /

    # If your app is in a subdirectory (e.g. localhost/mybillingapp/)
    # AND DocumentRoot is /path/to/project/public
    # THEN RewriteBase should be /mybillingapp/
    # Example: RewriteBase /mybillingapp/
    # (Adjust this if necessary for your local setup. Vercel ignores RewriteBase)

    # Send all requests not for existing files or directories to index.php in the parent directory
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ ../index.php [L,QSA] # Simpler rule first. Bramus Router can parse REQUEST_URI.

    # If the above doesn't work well with Bramus Router and subdirectories,
    # you might try passing the path explicitly:
    # RewriteRule ^(.*)$ ../index.php/$1 [L,QSA]
    # But usually, modern routers prefer to look at $_SERVER['REQUEST_URI'] themselves.
</IfModule>