{
  "version": 2,
  "framework": null,
  "builds": [
    {
      "src": "api/index.php",
      "use": "vercel-php@0.6.1" 
    },
    { "src": "global.css", "use": "@vercel/static" },
    { "src": "staff/index.html", "use": "@vercel/static" },
    { "src": "js/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/global.css", "dest": "/global.css" },
    { "src": "/js/(.*)", "dest": "/js/$1" },
    { "src": "/staff/index.html", "dest": "/staff/index.html" }, 

    {
      "src": "/billing/(.*)",
      "dest": "/api/index.php"
    },
    {
      "src": "/billing", 
      "dest": "/api/index.php" 
    },
    
    
    { "handle": "filesystem" }
  ],
  "env": {
    "APP_ENV": "production",
    "MONGODB_URI": "@mongodb-uri",
    "VERCEL_PHP_ENTRYPOINT": "router.php" 
  },
  "github": {
    "enabled": true,
    "silent": true 
  }
}