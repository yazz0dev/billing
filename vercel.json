{
    "version": 2,
    "builds": [
        {
            "src": "public/index.php",
            "use": "@vercel/php@0.7.3", 
            "config": { "memory": 1024, "maxDuration": 30 }
        },
        {
            "src": "public/build/**",
            "use": "@vercel/static"
        },
        {
            "src": "public/css/**",
            "use": "@vercel/static"
        },
        {
            "src": "public/js/**",
            "use": "@vercel/static"
        },
        {
            "src": "public/favicon.ico",
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        {
            "source": "/build/(.*)",
            "destination": "/public/build/$1"
        },
        {
            "source": "/css/(.*)",
            "destination": "/public/css/$1"
        },
        {
            "source": "/js/(.*)",
            "destination": "/public/js/$1"
        },
        {
            "source": "/favicon.ico",
            "destination": "/public/favicon.ico"
        },
        {
            "source": "/(.*)",
            "destination": "/public/index.php"
        }
    ],
    "redirects": [
        { "source": "/api/index.php", "destination": "/api", "permanent": true }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "false",
        "APP_URL": "billing-ashen.vercel.app",
        "APP_NAME": "Supermarket Billing System",
        "APP_CONFIG_CACHE": "/tmp/config.php",
        "APP_EVENTS_CACHE": "/tmp/events.php",
        "APP_PACKAGES_CACHE": "/tmp/packages.php",
        "APP_ROUTES_CACHE": "/tmp/routes.php",
        "APP_SERVICES_CACHE": "/tmp/services.php",
        "VIEW_COMPILED_PATH": "/tmp/views",
        "SSR_TEMP_PATH": "/tmp/ssr",
        "NODE_PATH": "node_modules",
        "CACHE_DRIVER": "array",
        "LOG_CHANNEL": "stderr",
        "SESSION_DRIVER": "cookie",
        "DB_CONNECTION": "mongodb",
        "MONGO_DB_URI": "mongodb+srv://yaseen:3GWpYAbQuZP06S6N@billcluster.rhevn0n.mongodb.net/?retryWrites=true&w=majority&appName=BillCluster",
        "MONGO_DB_DATABASE": "billing_refactored",
        "SANCTUM_STATEFUL_DOMAINS": "YOUR_VERCEL_APP_URL_WITHOUT_HTTPS",
        "SESSION_DOMAIN": "YOUR_VERCEL_APP_URL_WITHOUT_HTTPS_AND_WWW_PREFIX"
    },
    "build": {
        "env": {
            "PHP_VERSION": "8.2",
            "COMPOSER_VERSION": "2",
            "NPM_FLAGS": "--omit=dev --production"
        }
    }
}