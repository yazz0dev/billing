{
    "version": 2,
    "builds": [
        {
            "src": "public/index.php",
            "use": "@vercel/php@0.7.3"
        },
        {
            "src": "public/build/**",
            "use": "@vercel/static"
        },
        {
            "src": "public/css/**",
            "use": "@vercel/static"
        },
        {
            "src": "public/js/**",
            "use": "@vercel/static"
        },
        {
            "src": "public/favicon.ico",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/build/(.*)",
            "dest": "/public/build/$1"
        },
        {
            "src": "/css/(.*)",
            "dest": "/public/css/$1"
        },
        {
            "src": "/js/(.*)",
            "dest": "/public/js/$1"
        },
        {
            "src": "/favicon.ico",
            "dest": "/public/favicon.ico"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "public/index.php"
        }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "false",
        "APP_URL": "YOUR_VERCEL_APP_URL",
        "APP_KEY": "@laravel_app_key",
        "APP_NAME": "Supermarket Billing System",
        "APP_CONFIG_CACHE": "/tmp/config.php",
        "APP_EVENTS_CACHE": "/tmp/events.php",
        "APP_PACKAGES_CACHE": "/tmp/packages.php",
        "APP_ROUTES_CACHE": "/tmp/routes.php",
        "APP_SERVICES_CACHE": "/tmp/services.php",
        "VIEW_COMPILED_PATH": "/tmp/views",
        "SSR_TEMP_PATH": "/tmp/ssr",
        "NODE_PATH": "node_modules",
        "CACHE_DRIVER": "array",
        "LOG_CHANNEL": "stderr",
        "SESSION_DRIVER": "cookie", // or 'file' if cookies are an issue, ensure /tmp/sessions is writable
        "DB_CONNECTION": "mongodb",
        "MONGO_DB_URI": "@mongodb_uri",
        "MONGO_DB_DATABASE": "billing_refactored",
        "SANCTUM_STATEFUL_DOMAINS": "YOUR_VERCEL_APP_URL_WITHOUT_HTTPS",
        "SESSION_DOMAIN": "YOUR_VERCEL_APP_URL_WITHOUT_HTTPS_AND_WWW_PREFIX"
    },
    "build": {
        "env": {
            "PHP_VERSION": "8.2",
            "COMPOSER_VERSION": "2",
            "NPM_FLAGS": "--omit=dev --production"
        }
    },
    "functions": {
        "public/index.php": {
             "memory": 1024,
             "maxDuration": 30
        }
    },
    "redirects": [
        { "source": "/api/index.php", "destination": "/api", "permanent": true }
    ]
}
