{
  "version": 2,
  "builds": [
    {
      "src": "api/index.php",
      "use": "@vercel/php"
    }
  ],
  "routes": [
    {
      "src": "/billing/(favicon\\.ico|global\\.css|js/.+|images/.+|fonts/.+)",
      "dest": "/$1"
    },
    {
      "src": "/billing/(.*)",
      "dest": "/api/index.php"
    },
    {
      "src": "/billing",
      "dest": "/api/index.php"
    }
  ],
  "env": {
    "APP_ENV": "production",
    "MONGODB_URI": "@mongodb-atlas-uri",
    "APP_BASE_PATH": "/billing"
  }
}